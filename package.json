{
  "name": "webcoupers",
  "version": "1.0.0",
  "description": "Website for Webcoupers - A Technology and Marketing agency focused on driving innovation and growth for forwrd thinking brands.",
  "main": "index.html",
  "scripts": {
    "start": "npm-run-all --parallel liveserver watch",
    "liveserver": "live-server",
    "watch": "node-sass sass/main.scss assets/css/style.css -w",
    "compile": "node-sass sass/main.scss assets/css/style.css",
    "prefix": "postcss assets/css/style.css --use autoprefixer -o assets/css/style.css",
    "compress": "node-sass assets/css/style.css assets/css/style.css --output-style compressed",
    "build": "npm-run-all compile prefix compress"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.0.1",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.0"
  }
}
